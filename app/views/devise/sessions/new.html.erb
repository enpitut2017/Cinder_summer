<div class="form-horizontal" role="form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <h2 class="col-sm-offset-1">Sign in</h2>
    </div>

    <div class="field form-group">
      <%= f.label :email, :class => 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
      </div>
    </div>
    <br>

    <div class="field form-group">
      <%= f.label :password, :class => 'control-label col-sm-2' %>
      <div class="col-sm-5">
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      </div>
    </div>
    <br>

    <% if devise_mapping.rememberable? -%>
      <div class="check_box form-group">
<!--        <div class="col-sm-offset-2">
        <%= f.check_box :remember_me, :class => 'control-label col-sm-offset-2'%>
        <%= f.label :remember_me %>
        </div>
-->
        <div class="col-sm-offset-2">
          <label><input value="" type="checkbox"> Remember me</label>
        </div>
      </div>
    <% end -%>
    <br>

    <div class="actions form-group">
      <%= f.submit "Sign in", :class => 'col-sm-offset-3 col-sm-3 btn btn-success' %>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-3">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
