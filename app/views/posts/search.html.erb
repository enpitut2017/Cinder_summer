<p id="notice"><%= notice %></p>

<p>タグ検索</p>

<%= form_tag('search', :method => :get) do %>
  <input type="text" name = "keyword" /><br />
  <input type="submit" value="検索">
<% end %>

<h1>体験談の一覧</h1>
	<% @posts.each do |post| %>
 	<div class="panel panel-success">
		<div class="panel-heading">
			<h3 class="panel-title row">
				<strong>
					<%= link_to '件名', post,:class => "col-sm-8" %>	
				</strong>
				<div class="col-sm-4 text-right">
					<%= link_to "#{post.user.name}", detail_posts_path(:user_id => post.user.id) %> さんの投稿
				</div>
			</h3>
		</div>
		<div class="panel-body">
			<%= post.content %>
		</div>
	</div>			        
	<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>会社名</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= render 'posts/tag_list' , tag_list: post.mycompany_list %></td>
        <td><%= render 'posts/tag_list', tag_list: post.mytag_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>
