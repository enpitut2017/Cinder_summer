<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= form.label :company_list, "会社一覧" %><br>
      <%= text_field_tag 'post[mycompany_list]', @post.mycompany_list.join(',') %>
  </div>

  <div class="field">
      <%= form.label :mytag_list, "タグ" %><br>
      <%= text_field_tag 'post[mytag_list]', @post.mytag_list.join(',') %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :post_content %>
  </div>
  <% if user_signed_in? %>
    <div class="field">
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
