<div class="panel panel-success">
	<div class="panel-heading">
		<h3 class="panel-title">
			<strong><td><%= link_to "#{@post.user.name}", detail_posts_path(:user_id => @post.user.id),:class => "panel-title" %></td></strong> さんの投稿
		</h3>
	</div>
	<div class="panel-body">
		<%= @post.content %>
	</div>
	<div class="row">
		<span class="col-sm-1 text-center">企業名:</span>
		<div class="col-sm-5">
			<%= render 'posts/tag_list' , tag_list: @post.mycompany_list %>
		</div>
		<span class="col-sm-1 text-center">タグ:</span>
		<div class="col-sm-5">
			<%= render 'posts/tag_list' , tag_list: @post.mytag_list %>
		</div>
	</div>
</div>

<div align="right">
<% if current_user == @post.user %>
	<%= link_to '編集する', edit_post_path(@post), :class => "btn btn-info"%>
<% end %>
<%= link_to '戻る', posts_path, :class => "btn btn-default"%>
</div>
