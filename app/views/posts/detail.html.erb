<h1>
	<%= @user.name %> さんの投稿一覧
</h1>
<% @posts.each do |post| %>
	<div class="panel panel-success">
		<div class="panel-heading">
			<h3 class="panel-title">
				<strong>
					<%= link_to '件名', post %>
				</strong>

			</h3>
		</div>
		<div class="panel-body">
			<%= post.content %>
		</div>
	</div>
<% end %>
